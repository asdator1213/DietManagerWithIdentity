@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    <div class="row">
        <div class="col-md-3"></div>
        
        <div class="col-md-6">
            @if (User.IsInRole("Dietician"))
            {
                <div style="display: table; margin: 10px auto;">
                    @Html.ActionLink("Patients", "Patients", "Dietician", null, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Diets", "Diets", "Diet", null, new { @class = "btn btn-info" })
                </div>
            }
        </div>
        <div class="pull-right col-md-3">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i style="padding-right: 15px;" class="glyphicon glyphicon-user"></i>
                        <b>Welcome, @User.Identity.GetUserName() <span class="caret"></span></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("ChangePassword", "Manage")"><i style="padding-right: 10px;" class="glyphicon glyphicon-hand-right"></i>Change password</a></li>
                        <li class="divider"></li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                            {
                                @Html.AntiForgeryToken()
                                <a id="logoff-btn" href="javascript:document.getElementById('logoutForm').submit()"><i style="padding-right: 10px;" class="glyphicon glyphicon-off"></i>Log off</a>
                            }

                        </li>
                    </ul>
                </li>
            </ul>
        </div>


    </div>


